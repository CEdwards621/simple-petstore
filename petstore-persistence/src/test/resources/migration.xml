<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="migrationResolver" class="com.carbonfive.db.migration.ResourceMigrationResolver">
        <constructor-arg value="${project.basedir}/src/main/db/migrations"/>
    </bean>

    <bean id="migrationManager" class="com.carbonfive.db.migration.DataSourceMigrationManager" init-method="migrate">
        <constructor-arg ref="dataSource"/>
        <property name="migrationResolver" ref="migrationResolver"/>
    </bean>
</beans>
