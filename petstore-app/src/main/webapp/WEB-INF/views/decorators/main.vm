<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US" lang="en-US">
<head>
    <meta content="text/html;charset=UTF-8" http-equiv="Content-Type"/>
    <link href="$base/stylesheets/main.css?$date.systemTime" media="screen" rel="stylesheet" type="text/css"/>
    <link rel="shortcut icon" href="$base/images/favicon.ico"/>
    <title>$title</title>
    $head
</head>
<body>
<div id="petstore">
    <div id="header">
        <a href="$base" id="homelink">Home</a>

        <div id="search-box">
            #parse("_search.vm")
        </div>
        <div id="logout">
            #parse("_logout.vm")
        </div>
        <div id="shopping-cart">
            <!-- Spring stores proxied objects in the session with a "scopedTarget." prefix -->
            #set( $cart = $session.getAttribute('scopedTarget.cart') )
            #parse("_cart.vm")
        </div>
    </div>
    <div id="content">
        $body
    </div>
    <div id="footer">
        <ul>
            <li>iguana</li>
            <li>dog</li>
            <li>cat</li>
            <li>bird</li>
        </ul>
    </div>
</div>
</body>
</html>