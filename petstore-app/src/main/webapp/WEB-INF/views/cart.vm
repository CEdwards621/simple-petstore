
<html>
<head>
    <title>PetStore - Cart content</title>
</head>
<body>
<fieldset>
    <legend>
        <span>Your cart contains the following items:</span>
    </legend>

    <table id="cart">
        <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        #foreach ($cartItem in $cart.items)
            #if( $count % 2 == 0 )
                #set( $rowStyle = 'evenrow' )
            #else
                #set( $rowStyle = 'oddrow' )
            #end

        <tr id="cart_item_$cartItem.itemNumber" class="cart-item $rowStyle">
            <td class="count">$cartItem.quantity</td>
            <td class="item">$!cartItem.itemDescription</td>
            <td class="price">$cartItem.itemUnitPrice</td>
            <td class="total">$cartItem.totalPrice</td>
        </tr>
        #end
        <tr class="cart-summary">
            <td colspan="4">
                <ol class="calculations">
                    <li>
                        <span class="label">Grand Total: </span>
                        <span id="cart-grand-total" class="total">$cart.grandTotal</span>
                    </li>
                </ol>
            </td>
        </tr>
        </tbody>
    </table>
</fieldset>
<div id="actions">
    <ol>
        <li><a id="continue-shopping" href="$base">Continue Shopping</a></li>
        <li><a id="checkout" href="$base/checkout">Checkout</a></li>
    </ol>
</div>
</body>
</html>