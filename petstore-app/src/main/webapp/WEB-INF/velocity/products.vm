<html>
<head>
    <title>PetStore - Products</title>
</head>
<body>
    #if (!$productList)
    <p id="no-match">No product matching "$request.Keyword" was found</p>
	#else
	    #if ($productList.size() == 1)
	    <p>Found <span id="match-count">1</span> result for "$request.Keyword"</p>
		#else
    	<p>Found <span id="match-count">$productList.size()</span> results for "$request.Keyword"</p>
		#end

    <table id="products">
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Number</th>
        </tr>
        </thead>
        <tbody>
        #foreach ($product in $productList)
        <tr class="product">
            <td><img class="photo" src="$attachments.getAttachmentUrl($product)"></td>
            <td class="name"><a href="items?product_number=$product.Number">$product.Name</a></td>
            <td>$!product.Description</td>
            <td class="number">$product.Number</td>
        </tr>
        #end
        </tbody>
    </table>
    #end
</body>
</html>