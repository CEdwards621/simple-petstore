<html>
<head>
    <title>PetStore - Products</title>
</head>
<body>
<fieldset>
<legend>
    #if (!$productList)
    <span id="no-match">No product matching "$keyword" was found</span>
    #else
    Found <span id="match-count">$productList.size()</span> $display.plural($productList.size(), "result") for "$keyword"
</legend>
    <table id="products">
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
            #foreach ($product in $productList)
  #if( $velocityCount % 2 == 0 )
    #set( $style = 'evenrow' )
  #else
    #set( $style = 'oddrow' )
  #end
            <tr class="product $style">
                <td class="photo"><a href="products/$product.Number/items"><img src="$attachments.getAttachmentUrl($product)"></a></td>
                <td class="name"><a href="products/$product.Number/items">$product.Name</a></td>
                <td>$!product.Description</td>
            </tr>
            #end
        </tbody>
    </table>
</fieldset>
    #end
</body>
        </html>