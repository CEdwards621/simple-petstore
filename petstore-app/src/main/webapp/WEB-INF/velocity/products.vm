<html>
<head>
    <title>PetStore - Products</title>
</head>
<body>
#if ($productList)
Found <span id="match-count">$productList.size()</span> result(s)

<table id="products">
<thead>
<tr>
	<th></th>
	<th>Name</th>
	<th>Description</th>
</tr>
</thead>
#foreach ($product in $productList)
	<tr class="product">
		<td><img class="photo" src="$attachments.getAttachmentUrl($product)"></td>
		<td class="name"><a href="products/$product.getNumber()/items">$product.Name</a></td>
		<td>$!product.Description</td>
	</tr>
#end
</table>
    #else
    <div id="no-match"><p>No matching product found</p></div>
        #end
</body>
</html>