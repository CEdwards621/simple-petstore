<html>
<head>
    <title>PetStore - Products</title>
</head>
<body>
    #if (!$productList)
    <p id="no-match">No product matching "$keyword" was found</p>
    #else
    <p>Found <span id="match-count">$productList.size()</span> $display.plural($productList.size(), "result") for "$keyword"</p>

    <table id="products">
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
            #foreach ($product in $productList)
            <tr class="product">
                <td><img class="photo" src="$attachments.getAttachmentUrl($product)"></td>
                <td class="name"><a href="items?product_number=$product.Number">$product.Name</a></td>
                <td>$!product.Description</td>
            </tr>
            #end
        </tbody>
    </table>
    #end
</body>
        </html>