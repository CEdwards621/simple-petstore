<html>
<head>
    <title>PetStore - Products</title>
</head>
<body>
    #if (!$productList)
    <div id="no-match"><p>No matching product found</p></div>
    #else
    <p>Found <span id="match-count">$productList.size()</span> result(s)</p>

    <table id="products">
        <thead>
        <tr>
            <th>Number</th>
            <th></th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        #foreach ($product in $productList)
        <tr class="product">
            <td class="number">$product.Number</td>
            <td><img class="photo" src="$attachments.getAttachmentUrl($product)"></td>
            <td class="name"><a href="items?product_number=$product.Number">$product.Name</a></td>
            <td>$!product.Description</td>
        </tr>
        #end
        </tbody>
    </table>
    #end
</body>
</html>